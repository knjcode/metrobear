<header class="navbar navbar-default">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to APP_NAME, root_path, id: "logo" %>
      <nav>
        <ul class="nav nav-pills navbar-right">
          <li><%= link_to "現在地を判定", location_path %></li>
          <% if logged_in? %>
            <li><%= link_to "メンバ一覧", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= twitter_avatar current_user, 20 %> <%= current_user.nickname %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><a href="/users/<%= current_user.nickname %>">マイページ</a></li>
                <li class="divider"></li>
                <li><%= link_to "ログアウト", logout_path  %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Twitterでサインイン", '/auth/twitter' %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
